package com.github.limdingwen.SpaceCubes.GUI;

import java.awt.Font;
import java.awt.FontFormatException;
import java.io.IOException;
import java.io.InputStream;

import org.newdawn.slick.TrueTypeFont;
import org.newdawn.slick.util.ResourceLoader;

public class GUIFont {
	public static final int DEFAULT = 0;
	public static final int CUSTOM = 0;
	
	public static TrueTypeFont newFont(String fontName, int type, int size, int fontType) {
		if (fontType == DEFAULT) {
			return new TrueTypeFont(
					new Font(fontName, type, size), false);
		}
		else if (fontType == CUSTOM) {
			InputStream inputStream = ResourceLoader.getResourceAsStream(fontName);
			
			try {
				return new TrueTypeFont(
						Font.createFont(Font.TRUETYPE_FONT, inputStream).
						deriveFont(size), false);
			} catch (FontFormatException e) {
				System.out.println("Incompatible font!");
				
				e.printStackTrace();
			} catch (IOException e) {
				System.out.println("Cannot get font from stream!");
				
				e.printStackTrace();
			}
		}
		else {
			throw new UnsupportedOperationException();
		}
		
		// You can't really reach here...
		return null;
	}	
}
