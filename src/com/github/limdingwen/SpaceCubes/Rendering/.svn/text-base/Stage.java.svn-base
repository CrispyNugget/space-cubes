package com.github.limdingwen.SpaceCubes.Rendering;

import java.util.ArrayList;

public class Stage {
	public ArrayList<Actor> actorsOnStage = new ArrayList<Actor>();
	
	public void addActor(Actor actor) {
		actorsOnStage.add(actor);
		
		//System.out.println("Actor " + actor.toString() + " added to stage!");
	}
	
	public void removeActor(Actor actor) {
		actorsOnStage.remove(actor);
		
		//System.out.println("Actor " + actor.toString() + " removed from stage!");
	}
}
